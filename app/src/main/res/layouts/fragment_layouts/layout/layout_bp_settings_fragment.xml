<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_backttomaps2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/abc_vector_test"
            tools:ignore="PrivateResource" />

        <TextView
            android:id="@+id/tv_settings_ja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="45dp"
            android:editable="false"
            android:text="@string/Settings"
            android:textAlignment="center"
            android:textSize="36sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:editable="false"
        android:text="@string/Settings"
        android:textSize="24sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="1dp"
        android:background="@color/LightGrey" />
    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="false"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:text="Feedback"
        android:textSize="24sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="1dp"
        android:background="@color/LightGrey" />

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="false"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:text="Verifizierung beantragen"
        android:textSize="24sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="1dp"
        android:background="@color/LightGrey" />

    <TextView
        android:id="@+id/tv_reichweite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="false"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:text="Reichweite erhÃ¶hen"
        android:textSize="24sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="1dp"
        android:background="@color/LightGrey" />

    <TextView
        android:id="@+id/bp_tv_abmelden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:editable="false"
        android:text="@string/Settings_LogOut"
        android:textSize="24sp"
        android:onClick="onnClick"
        android:clickable="true"/>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="2dp"
        android:layout_height="1dp"
        android:background="@color/LightGrey" />
</LinearLayout>