<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_backttomaps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_settings_ja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginStart="45dp"
            android:text="@string/Settings"
            android:textAlignment="center"
            android:textSize="36sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_hp_empfehlen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="false"
        android:layout_marginTop="5dp"
        android:text="@string/Settings_RecommendHotspot"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Settings_MapLayout"
        android:textSize="24sp" />

    <RadioGroup
        android:id="@+id/tg_group"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ToggleButton
            android:id="@+id/tg_layout_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="@string/Settings_LightMap"
            android:textOn="@string/Settings_LightMap" />

        <ToggleButton
            android:id="@+id/tg_layout_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="@string/Settings_DarkMap"
            android:textOn="@string/Settings_DarkMap"
            android:layout_weight="1"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tv_abmelden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/Settings_LogOut"
        android:textSize="24sp"
        android:onClick="onnClick"
        android:focusable="true" />
</LinearLayout>